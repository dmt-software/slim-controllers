{
  "name": "dmt-software/slim-controllers",
  "description": "Detect and create routes for controllers",
  "type": "library",
  "license": "MIT",
  "minimum-stability": "dev",
  "prefer-stable": true,
  "authors": [
    {
      "name": "Bas de Mes",
      "email": "bas@dmt-software.nl"
    }
  ],
  "require": {
    "php": ">8.1",
    "psr/container": "^2.0",
    "slim/slim": "^4.2",
    "spiral/attributes": "^3.1"
  },
  "require-dev": {
    "dmt-software/di-plug": "^0.3",
    "phpunit/phpunit": "^10.0",
    "squizlabs/php_codesniffer": "^3.7",
    "pimple/pimple": "^3.5",
    "guzzlehttp/psr7": "^2.4"
  },
  "autoload": {
    "psr-4": {
      "DMT\\Slim\\Controller\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "DMT\\Test\\Slim\\Controller\\": "tests/"
    }
  },
  "suggest": {
    "dmt-software/di-plug": ">0.3"
  }
}
